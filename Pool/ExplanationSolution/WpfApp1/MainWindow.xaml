<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <StackPanel>

        <TextBlock
            Name="TextBlock"
            Width="100"
            Height="30"
            Margin="10" />
        <Button
            Height="30"
            Margin="40"
            Click="Sync_OnClick"
            Content="Synchronne -&gt; okno nereaguje na zvetseni po dobu 3 sekund" />


        <Button
            Height="30"
            Margin="40"
            Click="ButtonBase_OnClick"
            Content="Aynchronne -&gt; okno reaguje na zvetseni po dobu 3 sekund" />
    </StackPanel>
</Window>