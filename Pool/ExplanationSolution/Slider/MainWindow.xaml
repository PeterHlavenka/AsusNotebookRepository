<Window
    x:Class="Slider.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Slider"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <!--<Slider
        Name="slValue"
        IsSnapToTickEnabled="False"   // jestli bude skakat jen po carkach nebo muze byt i mezi nimi
        Maximum="100"
        TickFrequency="5"       // vzdalenost carek
        TickPlacement="BottomRight"
        IsMoveToPointEnabled="True"/>     // jestli skoci slider na pozici mysi-->
    <DockPanel Margin="10" VerticalAlignment="Center">

        <TextBox
            Width="40"
            DockPanel.Dock="Right"
            Text="{Binding ElementName=slValue, Path=Value, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Right" />
        <Slider
            Name="slValue"
            IsMoveToPointEnabled="True"
            IsSnapToTickEnabled="False"
            Maximum="100"
            TickFrequency="5"
            TickPlacement="BottomRight" />
    </DockPanel>
</Window>
