<Window x:Class="Xceed_wpfToolkit_Magnifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xceed_wpfToolkit_Magnifier"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="LightYellow">
        
        <Button  Name="MyButton" Click="MyButton_OnClick" Height="50" Width="300"> Magnifier muze byt nad jakymkoli elementem </Button>
        
        <xctk:MagnifierManager.Magnifier>
            <xctk:Magnifier Radius="100" ZoomFactor=".4"  Background="Black"/>
        </xctk:MagnifierManager.Magnifier>
        
    </Grid>
</Window>
