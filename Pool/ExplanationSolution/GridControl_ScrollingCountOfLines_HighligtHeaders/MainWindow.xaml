<Window x:Class="GridControlSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        Title="MainWindow"
        Width="820"
        Height="530">

    <Grid Name="ParentGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Width="200" Margin="10" Height="30">AdwindStyledButton</Button>
        <ScrollViewer Grid.Row="1" CanContentScroll="True" x:Name="scrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <syncfusion:GridControl x:Name="grid" PreviewMouseWheel="Grid_OnPreviewMouseWheel"/>
        </ScrollViewer>
    </Grid>
</Window>