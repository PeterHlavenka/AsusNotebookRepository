<UserControl x:Class="CsvReader.AddContentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Název:" FontSize="18" Margin="20, 15" />
            <TextBox Name="NameTextBox" MinWidth="300" Height="25" />
        </StackPanel>

        <DataGrid Name="DataGrid" Grid.Row="1" AutoGenerateColumns="True" MinColumnWidth="174" />
    </Grid>
</UserControl>